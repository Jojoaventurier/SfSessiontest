{% extends 'base.html.twig' %}

{% block title %}Stagiaires{% endblock %}

{% block body %}


        <table>
            <tr>
                <th><h1>Liste des stagiaires</h1></th>
            </tr>
            
                {% for trainee in trainees %}
                <tr>
                   <td><a href="{{ path('show_trainee', {'id': trainee.id}) }}">{{ trainee }}</a></td> <!--lien vers l'affichage du détail d'un stagiaire-->
                </tr>
                {% endfor %}
            
        </table>
        
        <a href="{{ path('new_trainee') }}">Ajouter un stagiaire</a><!--lien pour ajouter un stagiaire à la BDD-->

{% endblock %}
